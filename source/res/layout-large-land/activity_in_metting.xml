<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/video_layout_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2" >

        <ImageView
            android:id="@+id/in_meeting_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:src="@drawable/video_menu_button" />

        <RelativeLayout
            android:id="@+id/in_meeting_tools_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/in_meeting_menu_button"
            android:background="@color/in_meeting_title_bar_bg" >

            <ImageView
                android:id="@+id/in_meeting_setting_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="41dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/speaker_iv"
                android:src="@drawable/video_setting" />

            <ImageView
                android:id="@+id/in_meeting_setting_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/in_meeting_setting_iv"
                android:layout_marginRight="41dp"
                android:layout_toLeftOf="@+id/speaker_iv"
                android:src="@drawable/arrow"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/in_meeting_log_out_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/in_meeting_setting_iv"
                android:layout_alignParentRight="true"
                android:layout_marginRight="119dp"
                android:src="@drawable/logout" />

            <ImageView
                android:id="@+id/speaker_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/in_meeting_setting_iv"
                android:layout_marginRight="41dp"
                android:layout_toLeftOf="@+id/in_meeting_log_out_iv"
                android:src="@drawable/speaker" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/in_meeting_menu_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_below="@+id/in_meeting_menu_button"
            android:layout_marginTop="40dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/in_meeting_menu_show_attendees_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/video_send_attendee_button" />

            <ImageView
                android:id="@+id/in_meeting_menu_show_msg_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/video_menu_msg_button" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/in_metting_video_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/in_meeting_tools_bar"
            android:layout_toRightOf="@+id/in_meeting_menu_layout" >
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
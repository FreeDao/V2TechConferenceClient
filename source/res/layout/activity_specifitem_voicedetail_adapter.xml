<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/specific_voiceDetail_adapter_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vs_voice_callout" />
    <TextView
        android:id="@+id/specific_voiceDetail_adapter_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/specific_voiceDetail_adapter_direction"
        android:text="xxxxx"
        android:layout_marginLeft="8dp"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/specific_voiceDetail_adapter_holdTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/specific_voiceDetail_adapter_state"
        android:text="xxxxx"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/specific_voiceDetail_saveTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="xxxxx"
        android:textSize="14sp" />
</RelativeLayout>
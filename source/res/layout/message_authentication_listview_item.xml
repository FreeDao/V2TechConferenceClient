<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/confs_group_list_bg" >
    <ImageView
        android:id="@+id/ib_delete"
        android:layout_width="@dimen/common_delete_icon_width"
        android:layout_height="@dimen/common_delete_icon_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:padding="@dimen/common_delete_icon_padding"
        android:src="@drawable/ic_delete"
        android:textColor="@color/button_text_color"
        android:visibility="visible" />
    <RelativeLayout
        android:id="@+id/group_list_conference_image_view_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/conversation_view_margin"
        android:layout_marginRight="5dp"
        android:layout_marginTop="@dimen/conversation_view_margin"
        android:layout_toRightOf="@+id/ib_delete"
        android:paddingLeft="10dp" >
        <ImageView
            android:id="@+id/head_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/avatar" />
        <ImageView
            android:id="@+id/group_list_conference_notificator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/head_image"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/red_nofificator"
            android:visibility="invisible" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/group_list_conference_image_view_rl"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/ll_rightLayout"
        android:layout_toRightOf="@+id/group_list_conference_image_view_rl"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left|top"
            android:singleLine="true"
            android:text="TextView11111111111111133333333333333333333333333333333333333333333333333333333333333333333333333333333333311"
            android:textColor="@color/conversation_view_name_color"
            android:textSize="@dimen/conversation_view_name_text_size" />
        <TextView
            android:id="@+id/authentication_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/conversation_view_title_margin"
            android:ellipsize="end"
            android:gravity="left|bottom"
            android:singleLine="true"
            android:text="TextVi"
            android:textColor="@color/conversation_view_text_color"
            android:textSize="@dimen/common_item_text_size_16" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/ll_rightLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp" >
        <TextView
            android:id="@+id/access_or_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/button_padding_horizontal"
            android:paddingRight="@dimen/button_padding_horizontal"
            android:text="已同意"
            android:textColor="@color/common_item_text_color"
            android:textSize="@dimen/common_item_text_size_16"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/authentication_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/button_padding_vertical"
            android:paddingLeft="@dimen/button_padding_horizontal"
            android:paddingRight="@dimen/button_padding_horizontal"
            android:paddingTop="@dimen/button_padding_vertical"
            android:text="@string/crowd_invitation_accept_button_name"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/common_item_text_size_16" />
        <TextView
            android:id="@+id/b_suer_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corners_contacts_group_delete_button"
            android:paddingBottom="@dimen/button_padding_vertical"
            android:paddingLeft="@dimen/button_padding_horizontal"
            android:paddingRight="@dimen/button_padding_horizontal"
            android:paddingTop="@dimen/button_padding_vertical"
            android:text="@string/activiy_contact_group_item_button_delete"
            android:textColor="@color/common_white_color"
            android:textSize="@dimen/common_item_text_size_16"
            android:visibility="invisible" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/name_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@color/confs_group_widget_separation_line"
        android:orientation="vertical" >
    </LinearLayout>
</RelativeLayout>
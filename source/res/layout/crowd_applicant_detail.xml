<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_detail_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/crowd_applicant_return_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp"
            android:text="@string/contacts_user_detail_return_button"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/common_item_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/crowd_applicant_title"
            android:textColor="@color/activiy_contact_detail_title_color"
            android:textSize="@dimen/common_item_text_size" />

        <!-- Use translucent image to hold space -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/translucent" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cfcfcf"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" >

            <ImageView
                android:id="@+id/contact_user_detail_head_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/button_padding_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/avatar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/contact_user_detail_head_icon"
                android:layout_alignTop="@+id/contact_user_detail_head_icon"
                android:layout_marginLeft="@dimen/detail_detail_signature_margin_left"
                android:layout_toRightOf="@+id/contact_user_detail_head_icon"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/crowd_applicant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="top"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxWidth="@dimen/detail_detail_name_max_width"
                    android:singleLine="true"
                    android:text="TextView"
                    android:textColor="@color/common_black" />

                <com.v2tech.view.widget.MarqueeTextView
                    android:id="@+id/crowd_applicant_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:ellipsize="marquee"
                    android:gravity="bottom"
                    android:maxWidth="@dimen/detail_detail_name_max_width"
                    android:singleLine="true"
                    android:text="TextView"
                    android:textColor="@color/common_item_text_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/crowd_application_button_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/crowd_invitation_box_right_margin" >

                <TextView
                    android:id="@+id/crowd_application_accept_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/crowd_invitation_box_right_margin"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/crowd_invitation_button_padding_vertical"
                    android:paddingLeft="@dimen/crowd_invitation_button_padding_horizontal"
                    android:paddingRight="@dimen/crowd_invitation_button_padding_horizontal"
                    android:paddingTop="@dimen/crowd_invitation_button_padding_vertical"
                    android:text="@string/crowd_application_accept_button_name"
                    android:textColor="@color/button_text_color"
                    android:textSize="@dimen/common_item_text_size" />

                <TextView
                    android:id="@+id/crowd_application_decline_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/crowd_invitation_button_padding_vertical"
                    android:paddingLeft="@dimen/crowd_invitation_button_padding_horizontal"
                    android:paddingRight="@dimen/crowd_invitation_button_padding_horizontal"
                    android:paddingTop="@dimen/crowd_invitation_button_padding_vertical"
                    android:text="@string/crowd_application_reject_button_name"
                    android:textColor="@color/button_text_color"
                    android:textSize="@dimen/common_item_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/crowd_application_notes_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/crowd_invitation_box_right_margin"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/crowd_application_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/crowd_invitation_box_right_margin"
                    android:gravity="center"
                    android:paddingBottom="@dimen/crowd_invitation_button_padding_vertical"
                    android:paddingLeft="@dimen/crowd_invitation_button_padding_horizontal"
                    android:paddingRight="@dimen/crowd_invitation_button_padding_horizontal"
                    android:paddingTop="@dimen/crowd_invitation_button_padding_vertical"
                    android:text="@string/crowd_application_accepted"
                    android:textColor="@color/common_item_text_color"
                    android:textSize="@dimen/common_item_text_size" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/crowd_application_additional_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RelativeLayout2"
            android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
            android:layout_marginLeft="@dimen/contact_detail_2_item_margin_left"
            android:layout_marginRight="@dimen/contact_detail_2_item_margin_right"
            android:background="@drawable/rounded_corners_of_contact_user_detail_outer"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/crowd_application_additional_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                android:layout_marginLeft="@dimen/contact_detail_2_item_margin_horizontal"
                android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/activiy_contact_detail_item_color"
                android:textSize="@dimen/common_item_text_size" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/contact_detail_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/crowd_application_additional_ly" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                    android:layout_marginLeft="@dimen/contact_detail_2_item_margin_left"
                    android:layout_marginRight="@dimen/contact_detail_2_item_margin_right"
                    android:background="@drawable/rounded_corners_of_contact_user_detail_outer"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                            android:layout_marginLeft="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                            android:padding="10dp"
                            android:text="@string/contacts_user_detail_item_title"
                            android:textColor="@color/activiy_contact_detail_item_color"
                            android:textSize="@dimen/common_item_text_size" />

                        <TextView
                            android:id="@+id/contact_user_detail_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                            android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="TextView"
                            android:textColor="@color/activiy_contact_detail_item_color"
                            android:textSize="@dimen/common_item_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c0c0c0" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                            android:layout_marginLeft="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                            android:padding="10dp"
                            android:text="@string/contacts_user_detail_item_address"
                            android:textColor="@color/activiy_contact_detail_item_color"
                            android:textSize="@dimen/common_item_text_size" />

                        <TextView
                            android:id="@+id/contact_user_detail_address_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                            android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="TextView"
                            android:textColor="@color/activiy_contact_detail_item_color"
                            android:textSize="@dimen/common_item_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c0c0c0" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                            android:layout_marginLeft="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                            android:padding="10dp"
                            android:text="@string/contacts_user_detail_item_email"
                            android:textColor="@color/activiy_contact_detail_item_color"
                            android:textSize="@dimen/common_item_text_size" />

                        <TextView
                            android:id="@+id/contact_user_detail_email_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                            android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="TextView"
                            android:textColor="@color/activiy_contact_detail_item_color"
                            android:textSize="@dimen/common_item_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c0c0c0" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                            android:layout_marginLeft="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                            android:padding="10dp"
                            android:text="@string/contacts_user_detail_item_cell_phone"
                            android:textColor="@color/activiy_contact_detail_item_color"
                            android:textSize="@dimen/common_item_text_size" />

                        <TextView
                            android:id="@+id/contact_user_detail_cell_phone_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                            android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="Cell phone"
                            android:textColor="@color/activiy_contact_detail_item_color"
                            android:textSize="@dimen/common_item_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c0c0c0" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                            android:layout_marginLeft="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                            android:padding="10dp"
                            android:text="@string/contacts_user_detail_item_telephone"
                            android:textColor="@color/activiy_contact_detail_item_color"
                            android:textSize="@dimen/common_item_text_size" />

                        <TextView
                            android:id="@+id/contact_user_detail_telephone_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                            android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="TextView"
                            android:textColor="@color/activiy_contact_detail_item_color"
                            android:textSize="@dimen/common_item_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c0c0c0" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                            android:layout_marginLeft="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                            android:padding="10dp"
                            android:text="@string/contacts_user_detail_item_fax"
                            android:textColor="@color/activiy_contact_detail_item_color"
                            android:textSize="@dimen/common_item_text_size" />

                        <TextView
                            android:id="@+id/contact_user_detail_fax_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                            android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                            android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="TextView"
                            android:textColor="@color/activiy_contact_detail_item_color"
                            android:textSize="@dimen/common_item_text_size" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>
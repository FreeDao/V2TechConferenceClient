<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/confs_group_list_bg" >
    <RelativeLayout
        android:id="@+id/group_list_conference_image_view_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/group_list_conference_title_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/group_list_conference_title_layout"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp" >
        <ImageView
            android:id="@+id/group_list_conference_image_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/conference_icon_self" />
        <ImageView
            android:id="@+id/group_list_conference_notificator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/group_list_conference_image_view"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/red_nofificator"
            android:visibility="invisible" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/group_list_conference_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/conversation_view_margin"
        android:layout_marginLeft="@dimen/text_margin_left"
        android:layout_marginTop="@dimen/conversation_view_margin"
        android:layout_toLeftOf="@+id/gourp_list_conference_create_time_tv"
        android:layout_toRightOf="@+id/group_list_conference_image_view_rl" >
        <TextView
            android:id="@+id/group_list_conference_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:gravity="left|top"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/conversation_view_name_color"
            android:textSize="@dimen/conversation_view_name_text_size" />
        <TextView
            android:id="@+id/group_list_conference_owner_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_list_conference_title_tv"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="left|bottom"
            android:singleLine="true"
            android:text="TextViewaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:textColor="@color/conversation_view_text_color"
            android:textSize="@dimen/common_item_text_size_16" />
    </RelativeLayout>
    <TextView
        android:id="@+id/group_list_chat_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/text_margin_left"
        android:layout_toRightOf="@+id/group_list_conference_image_view_rl"
        android:ellipsize="end"
        android:gravity="left|top"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="@color/conversation_view_name_color"
        android:textSize="@dimen/conversation_view_name_text_size"
        android:visibility="gone" />
    <TextView
        android:id="@+id/gourp_list_conference_create_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/group_list_conference_title_layout"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/text_margin_left"
        android:paddingRight="15dp"
        android:ellipsize="end"
        android:gravity="bottom"
        android:singleLine="true"
        android:layout_marginBottom="2dp"
        android:maxWidth="100dp"
        android:text="2014-11-20 17:20:32"
        android:textColor="@color/common_item_text_color"
        android:textSize="@dimen/common_item_text_size_small" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/group_list_conference_image_view_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@color/confs_group_widget_separation_line"
        android:orientation="vertical" >
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/confs_group_list_bg" >
    <LinearLayout
        android:id="@+id/common_conversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/gourp_list_conference_create_time_tv" >
        <include layout="@layout/common_conversation_layout" />
    </LinearLayout>
    <TextView
        android:id="@+id/gourp_list_conference_create_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/common_conversation"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="@dimen/text_margin_left"
        android:ellipsize="end"
        android:gravity="bottom"
        android:maxWidth="150dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:text="2014-11-20 17:20:32"
        android:textColor="@color/common_item_text_color"
        android:textSize="@dimen/common_item_text_size_small" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/common_conversation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@color/confs_group_widget_separation_line"
        android:orientation="vertical" >
    </LinearLayout>
</RelativeLayout>
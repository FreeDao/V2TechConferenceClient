<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/conversation_framgent_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".25" >

            <ImageView
                android:id="@+id/conversation_fragment_video_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/fragment_conversation_waiting_invitation_video_avatar_margin_left"
                android:layout_marginTop="@dimen/fragment_conversation_waiting_invitation_video_avatar_margin_top"
                android:src="@drawable/avatar" />

            <TextView
                android:id="@+id/conversation_fragment_video_invitation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/conversation_fragment_video_avatar"
                android:layout_marginLeft="@dimen/fragment_conversation_waiting_invitation_video_name_margin_left"
                android:layout_toRightOf="@+id/conversation_fragment_video_avatar"
                android:text="名字"
                android:textColor="@color/fragment_conversation_title_text_color"
                android:textSize="@dimen/fragment_conversation_waiting_video_invitation_host_name_size" />

            <TextView
                android:id="@+id/fragment_conversation_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/conversation_fragment_video_avatar"
                android:layout_marginLeft="@dimen/fragment_conversation_waiting_invitation_video_name_margin_left"
                android:layout_toRightOf="@+id/conversation_fragment_video_avatar"
                android:text="@string/conversation_waiting"
                android:textColor="@color/fragment_conversation_title_text_color"
                android:textSize="@dimen/fragment_conversation_waiting_video_invitation_host_name_size" />

            <TextView
                android:id="@+id/fragment_conversation_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/conversation_waiting"
                android:textColor="@color/fragment_conversation_title_text_color"
                android:textSize="@dimen/fragment_conversation_waiting_title_text_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".45"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/conversation_fragment_voice_center_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <ImageView
                    android:id="@+id/conversation_fragment_voice_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/fragment_conversation_waiting_invitation_voice_avatar_margin_top"
                    android:src="@drawable/avatar" />

                <TextView
                    android:id="@+id/conversation_fragment_voice_invitation_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/conversation_fragment_voice_avatar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="名字"
                    android:textColor="@color/fragment_conversation_title_text_color"
                    android:textSize="@dimen/fragment_conversation_waiting_invitation_host_name_size" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight=".3"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/conversation_fragment_voice_invitation_button_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/fragment_conversation_waiting_invitation_button_margin_bottom"
                    android:layout_marginLeft="@dimen/fragment_conversation_waiting_invitation_button_margin"
                    android:layout_marginRight="@dimen/fragment_conversation_waiting_invitation_button_margin"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/conversation_fragment_voice_reject_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="@dimen/fragment_conversation_waiting_invitation_button_margin_hor"
                        android:layout_weight=".5"
                        android:background="@drawable/conversation_fragment_reject_button_selector"
                        android:gravity="center"
                        android:padding="@dimen/fragment_conversation_waiting_invitation_button_padding_vertical"
                        android:text="@string/conversation_reject_text"
                        android:textColor="@color/fragment_conversation_title_text_color"
                        android:textSize="@dimen/fragment_conversation_waiting_button_text_size" />

                    <TextView
                        android:id="@+id/conversation_fragment_voice_accept_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/fragment_conversation_waiting_invitation_button_margin_hor"
                        android:layout_weight=".5"
                        android:background="@drawable/conversation_fragment_accept_button_selector"
                        android:gravity="center"
                        android:padding="@dimen/fragment_conversation_waiting_invitation_button_padding_vertical"
                        android:text="@string/conversation_accept_text"
                        android:textColor="@color/fragment_conversation_title_text_color"
                        android:textSize="@dimen/fragment_conversation_waiting_button_text_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/conversation_fragment_voice_accept_only_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/fragment_conversation_waiting_invitation_button_margin_bottom"
                    android:layout_marginLeft="@dimen/fragment_conversation_waiting_invitation_button_margin"
                    android:layout_marginRight="@dimen/fragment_conversation_waiting_invitation_button_margin"
                    android:background="@drawable/conversation_fragment_gray_button_selector"
                    android:gravity="center"
                    android:padding="@dimen/fragment_conversation_waiting_invitation_button_padding_vertical"
                    android:text="@string/conversation_voice_accept_only_text"
                    android:textColor="@color/fragment_conversation_connected_gray_text_color"
                    android:textSize="@dimen/fragment_conversation_waiting_button_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/conversation_fragment_voice_host_invitation_button_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/fragment_conversation_connected_gray_button_margin_screen"
                    android:layout_marginRight="@dimen/fragment_conversation_connected_gray_button_margin_screen"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/conversation_fragment_waiting_speaker_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/fragment_conversation_waiting_invitation_button_margin_bottom"
                        android:layout_marginLeft="@dimen/fragment_conversation_connected_gray_button_margin_hor"
                        android:layout_marginRight="@dimen/fragment_conversation_connected_gray_button_margin_hor"
                        android:layout_weight=".25"
                        android:background="@drawable/conversation_fragment_gray_button_selector"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/fragment_conversation_connected_gray_button_padding_vertical"
                        android:paddingTop="@dimen/fragment_conversation_connected_gray_button_padding_vertical" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/message_voice_lounder" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="@string/conversation_speaker_text"
                            android:textColor="@color/fragment_conversation_connected_gray_text_color"
                            android:textSize="@dimen/fragment_conversation_connected_button_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/conversation_fragment_voice_host_cancel_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/fragment_conversation_waiting_invitation_button_margin_bottom"
                        android:layout_marginLeft="@dimen/fragment_conversation_connected_gray_button_margin_hor"
                        android:layout_marginRight="@dimen/fragment_conversation_connected_gray_button_margin_hor"
                        android:layout_weight=".5"
                        android:background="@drawable/conversation_fragment_reject_button_selector"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/fragment_conversation_connected_gray_button_padding_vertical"
                        android:paddingTop="@dimen/fragment_conversation_connected_gray_button_padding_vertical" >

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/conversation_connected_cancel_button" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/conversation_cancel_text"
                            android:textColor="@color/fragment_conversation_title_text_color"
                            android:textSize="@dimen/fragment_conversation_connected_button_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/conversation_fragment_waiting_mute_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/fragment_conversation_waiting_invitation_button_margin_bottom"
                        android:layout_marginLeft="@dimen/fragment_conversation_connected_gray_button_margin_hor"
                        android:layout_marginRight="@dimen/fragment_conversation_connected_gray_button_margin_hor"
                        android:layout_weight=".25"
                        android:background="@drawable/conversation_fragment_gray_button_selector"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/fragment_conversation_connected_gray_button_padding_vertical"
                        android:paddingTop="@dimen/fragment_conversation_connected_gray_button_padding_vertical" >

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/message_voice_mute" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/conversation_mute_text"
                            android:textColor="@color/fragment_conversation_connected_gray_text_color"
                            android:textSize="@dimen/fragment_conversation_connected_button_text_size" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
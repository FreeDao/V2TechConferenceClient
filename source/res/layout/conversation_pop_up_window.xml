<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     >

    <ImageView
        android:id="@+id/common_pop_up_arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="-2dp"
        android:src="@drawable/common_pop_up_arrow_up" />

    <LinearLayout
        android:id="@+id/common_pop_window_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_setting_window_bg"
        android:layout_below="@+id/common_pop_up_arrow_up"
        android:orientation="vertical" >
      
    </LinearLayout>

</RelativeLayout>
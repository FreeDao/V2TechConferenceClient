<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conference_create_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.conference.ConferenceCreateActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/confs_title_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/conference_create_title"
                android:textColor="@color/title_color"
                android:textSize="@dimen/common_item_text_size" />

            <TextView
                android:id="@+id/conference_create_confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:text="@string/conference_create_confirm"
                android:textColor="@color/conf_create_button_color"
                android:textSize="@dimen/common_item_text_size" />

            <TextView
                android:id="@+id/conference_create_return_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:text="@string/conference_create_cancel"
                android:textColor="@color/conf_create_button_color"
                android:textSize="@dimen/common_item_text_size" />

            <!-- Use translucent image to hold space -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/translucent" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cfcfcf"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/conference_create_error_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFDEAD"
            android:visibility="gone" >

            <TextView
                android:id="@+id/conference_create_error_notification_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:text="@string/error_create_conference_failed_from_server_side"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/confs_search_bar_bg"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/contacts_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/input_bg"
                android:focusableInTouchMode="true"
                android:inputType="text"
                android:paddingLeft="45dp"
                android:textColor="#000000"
                android:textSize="16sp" >
            </EditText>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/contacts_search"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@drawable/group_list_search_button" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cfcfcf"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
         >

        <RelativeLayout
            android:id="@+id/conf_create_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f2f2f2"
            android:padding="10dp" >

            <LinearLayout
                android:id="@+id/conf_create_text_box_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/rounded_corners_create_conf_box_bg"
                android:orientation="vertical"
                android:padding="1dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:text="@string/conference_create_conf_name"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/conference_create_conf_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:ems="10"
                        android:inputType="text"
                        android:maxLength="50"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cdcdcf"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1dp" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:text="@string/conference_create_conf_start_time"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/conference_create_conf_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:ems="10"
                        android:inputType="datetime"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

     
        
           

        <HorizontalScrollView
            android:id="@+id/conf_create_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:background="#f2f2f2" >

            <LinearLayout
                android:id="@+id/conference_attendee_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:tag="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>
        <com.v2tech.view.widget.GroupListView
            android:id="@+id/conf_create_contacts_list"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            
            android:layout_above="@+id/conf_create_scroll_view"
            android:layout_below="@+id/conf_create_form"
            android:divider="@null"
            android:focusable="false" >
        </com.v2tech.view.widget.GroupListView>
        
    </RelativeLayout>

</LinearLayout>
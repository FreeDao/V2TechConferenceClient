<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/message_voice_dialog_listening_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/message_voice_dialog_bg" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="15dp"
            android:src="@drawable/message_voice_speaker" />

        <ImageView
            android:id="@+id/message_voice_dialog_voice_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_toRightOf="@+id/imageView1"
            android:padding="15dp"
            android:src="@drawable/message_voice_volume_4" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="@string/contact_message_voice_dialog_text" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_voice_dialog_cancel_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/message_voice_dialog_bg" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:src="@drawable/message_voice_cancel_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@drawable/message_voice_dialog_cancel_text_bg"
            android:padding="5dp"
            android:text="@string/contact_message_voice_dialog_cancel_text"
            android:textColor="#ffffff" />
    </RelativeLayout>

</LinearLayout>
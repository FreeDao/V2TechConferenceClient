<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/confs_group_list_bg" >

    <RelativeLayout
        android:id="@+id/qualification_msg_adapter_item_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/conversation_view_margin"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="@dimen/conversation_view_margin" >

        <ImageView
            android:id="@+id/qualification_msg_delete_left_button"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/common_delete_icon_width"
            android:layout_height="@dimen/common_delete_icon_height"
            android:padding="@dimen/common_delete_icon_padding"
            android:src="@drawable/ic_delete" />

        <ImageView
            android:id="@+id/qualification_msg_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/qualification_msg_delete_left_button"
            android:src="@drawable/conference_icon_self" />

        <ImageView
            android:id="@+id/qualification_msg_notificator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/qualification_msg_image_view"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/red_nofificator"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/group_list_conference_titlelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/qualification_msg_adapter_item_left"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/linearlayout1"
        android:layout_toRightOf="@+id/qualification_msg_adapter_item_left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/qualification_msg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left|top"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/conversation_view_name_color"
            android:textSize="@dimen/conversation_view_name_text_size" />

        <TextView
            android:id="@+id/qualification_msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/conversation_view_title_margin"
            android:ellipsize="end"
            android:gravity="left|bottom"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/conversation_view_text_color"
            android:textSize="@dimen/common_item_text_size_16" />
        
        <TextView
            android:id="@+id/qualification_msg_content_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left|bottom"
            android:singleLine="true"
            android:text="TextView"
            android:visibility="gone"
            android:textColor="@color/conversation_view_text_color"
            android:textSize="@dimen/common_item_text_size_16" />
    </LinearLayout>
    

    <FrameLayout
        android:id="@+id/linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/qualification_msg_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已同意"
            android:visibility="invisible"
            android:paddingLeft="@dimen/button_padding_horizontal"
            android:paddingRight="@dimen/button_padding_horizontal"
            android:layout_gravity="center"
            android:textColor="@color/common_item_text_color"
            android:textSize="@dimen/common_item_text_size_16" />

        <TextView
            android:id="@+id/qualification_msgconfirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/button_padding_vertical"
            android:paddingLeft="@dimen/button_padding_horizontal"
            android:paddingRight="@dimen/button_padding_horizontal"
            android:paddingTop="@dimen/button_padding_vertical"
            android:text="@string/crowd_invitation_accept_button_name"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/common_item_text_size_16" />

        <TextView
            android:id="@+id/qualification_msg_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_contacts_group_delete_button"
            android:paddingBottom="@dimen/button_padding_vertical"
            android:paddingLeft="@dimen/button_padding_horizontal"
            android:paddingRight="@dimen/button_padding_horizontal"
            android:paddingTop="@dimen/button_padding_vertical"
            android:text="@string/activiy_contact_group_item_button_delete"
            android:layout_gravity="center"
            android:textColor="@color/common_white_color"
            android:visibility="invisible"
            android:textSize="@dimen/common_item_text_size_16" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/group_list_conference_titlelayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@color/confs_group_widget_separation_line"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>
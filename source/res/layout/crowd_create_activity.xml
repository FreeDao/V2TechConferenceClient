<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.conference.GroupCreateActivity" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <include layout="@layout/common_activity_title_layout" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cdcdcf"
            android:orientation="vertical" >
        </LinearLayout>
        <LinearLayout
            android:id="@+id/group_create_error_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFDEAD"
            android:visibility="gone" >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:text="@string/crowd_create_activity_error_info"
                android:textColor="@color/common_item_text_color_red"
                android:textSize="12sp" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/confs_search_bar_bg"
            android:orientation="horizontal" >
            <EditText
                android:id="@+id/contacts_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_bg"
                android:inputType="text"
                android:paddingLeft="50dp"
                android:imeOptions="actionDone"
                android:textColor="#000000"
                android:textSize="18sp" >
            </EditText>
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/contacts_search"
                android:layout_alignLeft="@+id/contacts_search"
                android:layout_alignTop="@+id/contacts_search"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/group_list_search_button" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/contacts_search" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cdcdcf"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f2f2f2" >
        <LinearLayout
            android:id="@+id/group_create_input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corners_create_conf_box_bg"
            android:orientation="vertical"
            android:padding="1dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".3"
                    android:gravity="left|center_vertical"
                    android:paddingRight="5dp"
                    android:text="@string/group_create_group_name"
                    android:textColor="@color/activiy_group_create_edit_title"
                    android:textSize="15sp" />
                <EditText
                    android:id="@+id/group_create_group_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight=".7"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="text"
                    android:maxLength="50"
                    android:imeOptions="actionDone"
                    android:nextFocusDown="@null"
                    android:nextFocusForward="@null"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" >
                    <requestFocus />
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cdcdcf"
                android:orientation="vertical" >
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:padding="1dp" >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".3"
                    android:gravity="left|center_vertical"
                    android:paddingRight="5dp"
                    android:text="@string/group_create_group_qualification"
                    android:textColor="@color/activiy_group_create_edit_title"
                    android:textSize="15sp" />
                <Spinner
                    android:id="@+id/group_create_group_rule"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".7"
                    android:gravity="left"
                    android:background="@null"
                    android:ems="10"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/group_create_scroll_view_ly"
            android:layout_below="@+id/group_create_input_box"
            android:background="#cdcdcf"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cdcdcf"
                android:orientation="vertical" >
            </LinearLayout>
            <com.v2tech.view.widget.GroupListView
                android:id="@+id/group_create_contacts_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:divider="@null"
                android:focusable="false" >
            </com.v2tech.view.widget.GroupListView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/group_create_scroll_view_ly"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cdcdcf"
                android:orientation="vertical" >
            </LinearLayout>
            <com.v2tech.view.widget.HorizontalListView
                android:id="@+id/crowd_create_list_view"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:tag="horizontal" >
            </com.v2tech.view.widget.HorizontalListView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>